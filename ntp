
---
version: "3.7"
services:
  ntp:
    image: cturra/ntp
    container_name: ntp
    commands:
      - "--detach=true"
    cap_add:
      - SYS_NICE
      - SYS_RESOURCE
      - SYS_TIME
    ports:
      - "123:123/udp"
    networks:
      - ntp
    restart: always

networks:
  ntp:
    name: ntp
